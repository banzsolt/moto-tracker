<%= form_tag(:action => 'index') do%>
    <%= collection_select :selected_device, :id, @devices, :id, :description %>
    <%= submit_tag('Track Device',
                   autofocus: 'autofocus',
                   id: 		'submit',
                   class: 		'button') %>
<% end %>




<%= form_tag(:action => 'create_device') do%>
    <%= text_field(:description,
                   nil,
                   maxlength: '50',
                   required: '',
                   placeholder: 'Description',
                   autofocus: 'autofocus')%>
    <%= submit_tag('Track Device',
                   autofocus: 'autofocus',
                   id: 		'submit',
                   class: 		'button') %>
<% end %>


